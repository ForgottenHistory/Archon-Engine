{
  "metadata": [
    {
      "src": [
        {
          "files": ["Scripts/Core/**/*.cs"],
          "src": "."
        },
        {
          "files": ["Scripts/Map/**/*.cs"],
          "src": "."
        },
        {
          "files": ["Scripts/StarterKit/**/*.cs"],
          "src": "."
        },
        {
          "files": ["Scripts/Engine/**/*.cs"],
          "src": "."
        },
        {
          "files": ["Scripts/Utils/**/*.cs"],
          "src": "."
        }
      ],
      "dest": "api",
      "filter": "filterConfig.yml",
      "properties": {
        "TargetFramework": "netstandard2.1"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": ["api/**.yml", "api/index.md"]
      },
      {
        "files": ["index.md", "toc.yml"]
      },
      {
        "files": ["Docs/Wiki/*.md", "Docs/Wiki/toc.yml"],
        "dest": "wiki"
      },
      {
        "files": ["Docs/Engine/*.md"],
        "dest": "architecture"
      },
      {
        "files": ["Scripts/Core/FILE_REGISTRY.md", "Scripts/Map/FILE_REGISTRY.md", "Scripts/StarterKit/README.md"],
        "dest": "guides"
      }
    ],
    "resource": [
      {
        "files": ["Promotion-Assets/Images/**"]
      }
    ],
    "xref": [
      "https://normanderwan.github.io/UnityXrefMaps/2022.3/xrefmap.yml"
    ],
    "dest": "_site",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appTitle": "Archon Engine API",
      "_appName": "Archon Engine",
      "_appFooter": "Archon Engine - Grand Strategy Game Framework",
      "_enableSearch": true,
      "_enableNewTab": true
    }
  }
}
